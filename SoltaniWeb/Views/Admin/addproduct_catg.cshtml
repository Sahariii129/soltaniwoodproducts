@model SoltaniWeb.Models.Domain.tbl_category

@{
    ViewBag.Title = "addproduct_catg";
   Layout = "~/Views/shared/_layoutbootstarp.cshtml";
}

<h2 style="color:#ffffff; ">افزودن زیر گروه جدید برای بخش : @ViewBag.sectionname</h2>

<hr />

@using (Html.BeginForm("addproduct_catg", "admin", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       <input name="section_id" value="@ViewBag.sectionid" style="visibility:hidden"/>
         <div class="form-group">
            @Html.LabelFor(model => model.categoryname, htmlAttributes: new { @class = "control-label col-md-2 lb1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.categoryname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.categoryname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label col-md-2 lb1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.shortname, htmlAttributes: new { @class = "control-label col-md-2 lb1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.shortname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.shortname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.keywords, htmlAttributes: new { @class = "control-label col-md-2 lb1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.keywords, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.keywords, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.imagecategory, htmlAttributes: new { @class = "control-label col-md-2 lb1" })
            <div class="col-md-10">
                
                <input style="color:#ffffff; " type="file" name="image" value=" " />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ثبت" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<center><span style=" color :#ffffff;">@ViewBag.Message</span></center>

<div class="btn-group" role="group" aria-label="...">
    <a href="../admin/adminpanel" class="btn btn-default">پنل مدیریت</a>
    <a href="../admin/manage_listkala" class="btn btn-primary">پنل مدیریت انبار وب</a>
    <a href="../admin/manage_entity" class="btn btn-success">گزارش موجودی انبار وب</a>
    <a href="../admin/reporttoorder" class="btn btn-danger">گزارش کالاهای کسری</a>
    <a href="../admin/manage_sections" class="btn btn-default">مدیریت بخش محصولات</a>
    <a href="../admin/manage_products?sectionid=@ViewBag.sectionid" class="btn btn-default">برگشت به صفحه قبل </a>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

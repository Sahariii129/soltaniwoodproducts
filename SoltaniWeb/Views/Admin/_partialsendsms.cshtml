            smstextpattern += 'www.soltaniwoodproducts.com'
            smstextpattern += '\n'
            smstextpattern += '07138219110'
            $(smstextcontent).html(smstextpattern)
        }


    })

    $(btn_sendsms).click(function () {
        var smstext = $(smstextcontent).html()
        var cellnumber = $(celluser).val()
     
        jQuery.post('/admin/sendsms', { cellnumber: cellnumber, smstext: smstext }, function (result) {


<div id="formbody" mode="sendsms" class="form-horizontal" username="@Model.username" fname="@Model.name">
    
    <div class="form-group">
        <label class="col-sm-3 control-label">شماره موبایل :</label>
        <div class="col-sm-9">
            <input type="text" id="celluser" placeholder="شماره موبایل مربوطه را وارد نمایید" class="form-control" value="@Model.cellphone" />
        </div>

    </div>
    <div class="form-group">

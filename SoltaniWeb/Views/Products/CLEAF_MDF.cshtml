<head>
    <title></title>


    <script src="~/Scripts/lightbox/js/modernizr.custom.js"></script>
    <link href="~/Scripts/lightbox/css/lightbox.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/soltanistatic/style/products.css" />
</head>
<style>
    .loading-image {
        position: absolute;
        top: 50%;
        left: 50%;
        z-index: 10;
    }

    .loader {
        display: none;
        width: 200px;
        height: 200px;
        position: fixed;
        top: 50%;
        left: 50%;
        text-align: center;
        margin-left: -50px;
        margin-top: -100px;
        z-index: 2;
        overflow: auto;
    }
</style>


<div class="container-fluid products" data-aos="fade-up">
    <div class="row my-4">
        <div class="col-12">
            <div style="position:relative">
                <h5 class="my-5 productsTitle">کالیته ام دی اف کلیف ایتالیا<span style="color:#132666"></span></h5>
            </div>
            @if (Model.FirstOrDefault().category.fulldescription != null)
            {
                <div style="box-shadow:0 3px 10px #aab3c2; padding:30px">
                    @Html.Raw(Model.FirstOrDefault().category.fulldescription)
                </div>
            }
        </div>
    </div>
    <div id="imagegallerydetaile" class="row myfont">
        @Html.Partial("~/Views/shared/_Partialproductslist.cshtml", Model);
    </div>
</div>



<script src="~/Scripts/lightbox/js/lightbox-2.6.min.js"></script>



            <div class="form-group">
                <div class="row">
                    <label class="control-label col-md-4">وضعیت ارتباط: </label>
                    <div class="col-md-8">
                        <select id="connectionsataus" class="form-control">

                            <option value="0">مهم نیست </option>
                            <option value="1">برقراری ارتباط </option>
                            <option value="2">عرم برقراری ارتباط </option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-12 text-left">
                        <button type="submit" class="btn" id="Btn_searchappbyconnectionsataus" style="background-color:#332b3a;color:#ffca01">جستجو</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
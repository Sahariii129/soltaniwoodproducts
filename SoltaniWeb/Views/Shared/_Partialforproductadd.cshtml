@using SoltaniWeb.Models.Domain
@model tbl_category

@{
    _4820_soltaniwebContext db = new _4820_soltaniwebContext();
    int sectionid = Model.section_.id;
    var catgtables = Model.section_.tbl_category.ToList();
}

<div id="formbody" mode="add" class="form-horizontal">

    <div class="form-group row">
        <label class="control-label col-2 ">بخش : </label>
        <div class="col-4">
            <select class="form-control" id="section" catgid="@Model.id">


                @foreach (var item in db.tbl_section)
                {
                    <option value="@item.id" selected="@(item.id==sectionid)">@item.name</option>
                }
            </select>
        </div>
        <label class="control-label col-sm-2 ">برند : </label>
        <div class="col-sm-4">
            <select class="form-control" id="categoryid">

                @Html.Partial("_partialforcatg", catgtables)

            </select>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-2 ">نام : </label>
        <div class="col-4">
            <input id="pname" type="text" class="form-control" placeholder="نام محصول را وارد کنید">
        </div>
        <label class="control-label col-2 ">ابعاد : </label>
        <div class="col-4">
            <input id="dimension" type="text" class="form-control" placeholder="واحد : سانتیمتر">
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-2 ">کد : </label>
        <div class="col-4">
            <input id="codename" type="text" class="form-control" placeholder="">
        </div>
        <label class="control-label col-2 ">کلاس : </label>
        <div class="col-4">
            <input id="grade" type="text" class="form-control" placeholder="">
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-2 ">کلمات کلیدی : </label>
        <div class="col-4">
            <input id="keywords" type="text" class="form-control" placeholder="کلمات با - جدا شوند">
        </div>
        <label class="control-label col-2 ">حد نصاب : </label>
        <div class="col-4">
            <input id="inventory" type="text" class="form-control" placeholder="حتماً وارد شود.">
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-2 ">قیمت خرید : </label>
        <div class="col-4">
            <input id="lastbuycost" type="text" class="form-control" placeholder="به ریال وارد کنید">
        </div>
        <label class="control-label col-2 ">قیمت فروش : </label>
        <div class="col-4">
            <input id="lastcellcost" type="text" class="form-control" placeholder="به ریال وارد کنید">
        </div>
    </div>
    <div class="form-group row">

        <label class="control-label col-2 ">وزن : </label>
        <div class="col-4">
            <input id="weight" type="text" class="form-control" placeholder="واحد : کیلوگرم">
        </div>
        <label class="control-label col-2">وضعیت نمایش :</label>
        <div class="col-4">

            <select id="pstatus" class="form-control">
                <option value="true">نمایش</option>
                <option value="false" selected>عدم نمایش</option>

            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-2 ">توضیحات : </label>
        <div class="col-10">
            <input id="description" type="text" class="form-control" placeholder="رنگ های مشابه در سایر برندهای را وارد نمایید">
        </div>

    </div>


    <div class="form-group row">
        <label class="control-label col-2">تصویر :</label>
        <div class="col-4">
            <input type="file" id="addimage" />

            <div class="loader">
                <center>

                    <img class="loading-image" src="~/Content/img/icon/130.gif" alt="loading..">
                </center>
            </div>
            <div id="infobox"></div>
        </div>
        <div class="col-6">



            <img id="addimgpre" height="250" width="250" style="border:3px solid blue; border-radius:10px; float:left;" src="" />

        </div>

    </div>

</div>
<btn id="btn_save" class="btn" style="background-color:#6a95cc;color:#fff">ثبت و ذخیره</btn>



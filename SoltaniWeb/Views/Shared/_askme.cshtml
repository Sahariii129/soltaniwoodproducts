@using SoltaniWeb.Models.Domain
@model tbl_contactus
<div class="form-horizontal">
    <div class="form-group">

        <label class="control-label col-md-3"> نام :</label>
        <div class="col-md-9">
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })

            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">

        <label class="control-label col-md-3"> آدرس ایمیل :  </label>
        <div class="col-md-9">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>


    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.text, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.text, new { htmlAttributes = new { @class = "form-control", @id = "text1" } })
            @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
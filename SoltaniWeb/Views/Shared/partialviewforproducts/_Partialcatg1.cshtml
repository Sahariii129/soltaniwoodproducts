@using SoltaniWeb.Models.Domain
@model tbl_category

@{
    SoltaniWeb.Models.Domain._4820_soltaniwebContext db = new SoltaniWeb.Models.Domain._4820_soltaniwebContext();
    int userid = int.Parse(User.Claims.FirstOrDefault().Value);
}


<a href="/admin/detailsproducts_catg/@Model.id"><img src="@(Model.image!=null ?    string.Format("data:image/jpeg;base64,{0}", Convert.ToBase64String(Model.image)) : "")" alt="@Model.categoryname" style="width:100%; height:100px;" class="img-thumbnail" /></a>
@if (Model.status == true)
{
    <div id="sample1" style="position:absolute; top:10px;right:20px; padding-left:10px; padding-right:10px; border-radius:3px; font-size:14px; font-family:'Iranian Sans';"><img src="~/Content/img/icon/Ok-icon.png" style="width:24px; height:24px;" /> </div>
}
else if (Model.status == false)
{
    <div id="sample1" style="position:absolute; top:10px;right:20px; padding-left:10px; padding-right:10px; border-radius:3px; font-size:14px; font-family:'Iranian Sans';"><img src="~/Content/img/icon/no-icon.png" style="width:24px; height:24px;" /> </div>

}
else
{
    <div id="sample1" style="position:absolute; top:10px;right:20px; padding-left:10px; padding-right:10px; border-radius:3px; font-size:14px; font-family:'Iranian Sans';">نامشخص </div>

}
<div class=" row" style="border :2px solid  rgb(227, 227, 200); margin :1px; background-color:#ffffff; ">

    <div class="col-lg-12 col-md-12 col-12">
        <a href="#"><h5 style="text-align :center ;"> @Model.categoryname </h5></a>
    </div>
    @if (db.tbl_accesslevels.Where(a => a.userid == userid && a.accessid == 18 && a.accessvalue == true).SingleOrDefault() != null)
    {
        <div class="col-lg-4 col-md-4 col-4">
            <center> <a href="#" class="editproducts_catg" catgid="@Model.id"><img src="~/Content/img/icon/edit.png" style="height:24px; width:auto;" /></a></center>
        </div>
    }
    @if (db.tbl_accesslevels.Where(a => a.userid == userid && a.accessid == 19 && a.accessvalue == true).SingleOrDefault() != null)
    {
        <div class="col-lg-4 col-md-4 col-4">
            <center><a class="catgdelete" catgid="@Model.id" href="#"><img src="~/Content/img/icon/delete.png" style="height:24px; width:auto;" /></a></center>
        </div>
    }
    <div class="col-lg-4 col-md-4 col-4">
        <center><a href="/admin/detailsproducts_catg/@Model.id"><img src="~/Content/img/icon/details.png" style="height:24px; width:auto;" /></a></center>
    </div>


</div>



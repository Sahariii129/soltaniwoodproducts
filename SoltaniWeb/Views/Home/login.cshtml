@{
    //ViewBag.Title = "کالای چوب سلطانی / صفحه ورود";
    ViewBag.howtoindex = "noindex";
    Layout = "~/Views/shared/_layoutbootstarp.cshtml";
}
@using SoltaniWeb.Models.structs
@model loginstruct

<br />  <br /> <br />
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-6 col-sm-12 col-sx-12" style="padding: 20px;">
    <div class="panel panel-primary" style="border:none !important;margin:5px;">


        <div class="panel-heading">
            <h4 style=" text-align :center; color:#ffffff;">بخش ورود کاربران</h4>
        </div>

        <div class="panel-body">
            <br />
            <form action="/home/log" style="border:none !important;">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="username" class="myfont col-md-5" style="margin-bottom:10px;">نام کاربری :</label>
                        <div class="col-md-7">
                           @Html.TextBoxFor(Model => Model.username, htmlAttributes: new { @class = "form-control" })
                             @*<input type="text" name="username" class="form-control" id="usr" style="font-size:18px;">*@
                        </div>


                    </div>
                    <div class="form-group">
                        <label for="pwd" class="myfont col-md-5" style="margin-bottom:10px;">گذر واژه :</label>
                        <div class="col-md-7">

                            @Html.PasswordFor(Model => Model.password, htmlAttributes: new { @class = "form-control" })


                           @* <input type="password" name="password" class="form-control" id="pwd" style="font-size:18px;">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="pwd" class="myfont col-md-5" style="margin-bottom:10px;">من را به خاطر بسپار :</label>
                        <div class="col-md-7">
                            @Html.CheckBoxFor(Model => Model.RememberMe, htmlAttributes: new { @class = "form-control col-md-1" })
                            @*<input type="checkbox" name="RememberMe" class="form-control col-md-1" id="pwd" style="font-size:18px;" value="true">*@
                        </div>
                    </div>

                </div>

                <button id="btenter" type="submit" class="btn btn-success" style=" margin:3px;">ورود</button>


                <a id="recoveryaccount" href="/home/recoveryaccount" type="submit" class="btn btn-warning" style=" margin:3px;">بازیابی حساب کاربری</a>
            </form>
        </div>




    </div>
</div>



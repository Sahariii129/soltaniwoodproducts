@using SoltaniWeb.Models.Domain

@model SoltaniWeb.Models.VerifyResult
@{
    ViewBag.Title = "VerifyPayment";
    Layout = "~/Views/shared/_layoutbootstarp.cshtml";
    _4820_soltaniwebContext db = new _4820_soltaniwebContext();
    var thiscart = db.tbl_purchasekart.Where(a => a.transId == Model.TransActionID).SingleOrDefault();
    
}


<br />
<div class=" col-md-9">

    <div class="col-xs-12  " >

        @if (Model.success)
        {
            
            <div class="panel">
                <div class="panel-heading" style="background-color:#0bc336;">
                    عملیات موفقیت آمیز پرداخت
                </div>
                <div class="panel-body">
                    <table class="table table-responsive">
                        <tr>
                            <td> پیام سیستم  </td>
                            <td> @Model.SuccessMessage   </td>
                        </tr>
                        <tr>
                            <td>  شناسه تراکنش :  </td>
                            <td>   @Model.TransActionID  </td>
                        </tr>
                        <tr>
                            <td>مبلغ تراکنش :  </td>
                            <td> @Model.Amount </td>
                        </tr>
                        <tr>
                            <td>عملیات  </td>
                            <td><a class="btn btn-success" href="~/Reports/purchasecartreport?cartid=@thiscart.id">چاپ  سبد کالا</a> </td>
                        </tr>
                    </table>
                </div>
                <div class="panel-footer">

                </div>
            </div>
                 
            
        }
        else
        {
            
                    <div class="alert alert-danger">
                        @Model.ErrorMessage
                    </div>
            
        }

        
    </div>
   




</div>


